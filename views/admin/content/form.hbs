<div class="row gap-20 masonry pos-r">
    <div class="masonry-sizer col-md-12"></div>
    <div class="masonry-item col-md-12">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900"><a href="/admin/content" class="btn btn-secondary btn-sm">К списку</a></h6>
            <div class="mT-30">
                <form action="{{#if content}}/admin/content/postupdatecontent/{{content.id}}{{else}}/admin/content/postcontent{{/if}}" method="POST">
                    <div class="form-group">
                        <label for="title">Название</label>
                        <input type="text" class="form-control" value="{{content.title}}" name="title" id="title" aria-describedby="titleHelp" placeholder="Пример: Первый контент в блоке 'О компании'">
                        <small id="titleHelp" class="form-text text-muted">Подсказка для контента</small>
                    </div>
                    <div class="form-group">
                        <label for="identifikator">Идентификатор</label>
                        <input type="text" class="form-control" name="identifikator" value="{{content.identifikator}}" id="identifikator" aria-describedby="identifikatorHelp" placeholder="Пример: first_content_about">
                        <small id="identifikatorHelp" class="form-text text-muted">Уникальный идентификатор для поля</small>
                    </div>
                    <div class="form-group">
                        <label for="text">Текст</label>
                        <textarea name="text" id="text" placeholder="Контент" class="form-control" rows="8" cols="80">{{content.text}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</div>
